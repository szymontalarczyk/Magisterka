<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><![CDATA[
    android:layout_width="match_parent" android:layout_height="match_parent"    ]]>

    <Button
        android:text="Wyślij"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sterowanie manualne robota"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:theme="@style/AppTheme"
        android:transitionName="@string/abc_action_bar_up_description"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:background="?android:attr/actionModeSplitBackground"
        android:popupBackground="@android:drawable/btn_default"
        android:entries="@array/lista_komend_sterowanie_manualne"
        android:minWidth="?android:attr/listPreferredItemHeightLarge"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dialog"
        android:layout_below="@+id/FunctionView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Wybierz funkcję:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FunctionView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Wpisz parametry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Parameters"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:layout_above="@+id/Tabela"
        android:layout_alignEnd="@+id/FunctionView" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:id="@+id/Tabela"
        android:layout_above="@+id/send_button"
        android:layout_alignStart="@+id/textView4">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textX"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/setX"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textY"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/setY" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textZ"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/setZ" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Alfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAlfa"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/setAlfa" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="beta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textBeta"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/setBeta" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Gamma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textGamma"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/setGamma" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSpeed"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/setSpeed"
                android:text="0.5" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
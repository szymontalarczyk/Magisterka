<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:layout_width="match_parent" android:layout_height="match_parent"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sterowanie manualne robota"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textSize="40sp"
        android:theme="@style/AppTheme"
        android:transitionName="@string/abc_action_bar_up_description"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Wybierz funkcję:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FunctionView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:background="@android:drawable/btn_dropdown"
        android:popupBackground="@color/colorPrimary"
        android:entries="@array/lista_komend_sterowanie_manualne"
        android:minWidth="?android:attr/listPreferredItemHeightLarge"
        android:dropDownWidth="match_parent"
        android:dropDownSelector="@drawable/side_nav_bar"
        android:textAlignment="center"
        android:layout_below="@+id/FunctionView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Wpisz parametry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Parameters"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:textSize="24sp"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textColor="@color/colorPrimary" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tabela"
        android:layout_above="@+id/send_button"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textX"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/setX"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textY"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/setY"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textZ"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/setZ"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Alfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAlfa"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/setAlfa"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Beta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textBeta"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/setBeta"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Gamma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textGamma"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/setGamma"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Prędkość"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSpeed"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/setSpeed"
                android:text="0.5"
                android:textColor="@color/colorPrimary" />

        </TableRow>
    </TableLayout>

    <Button
        android:text="Wyślij"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_button"
        android:layout_marginBottom="36dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ekran Główny"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IP urządzenia"
        android:id="@+id/Ip_view"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/showIP"
        android:autoText="true"
        android:text="IP"
        android:layout_below="@+id/Ip_view"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="połącz"
        android:id="@+id/connect_to_robot"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginTop="117dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/showIP" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip_connect"
        android:layout_below="@+id/showIP"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IP"
        android:id="@+id/IPPP"
        android:layout_below="@+id/ip_connect"
        android:layout_alignParentStart="true" />

</RelativeLayout>